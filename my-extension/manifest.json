{
  "manifest_version": 3,
  "name": "Negotiating Agent",
  "version": "1.0",
  "description": "AI-powered negotiation assistant for Facebook Marketplace",
  "permissions": [
    "sidePanel",
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://generativelanguage.googleapis.com/*",
    "https://www.facebook.com/*"
  ],
  "background": {
    "service_worker": "src/background/service-worker.js"
  },
  "side_panel": {
    "default_path": "src/popup/popup.html"
  },
  "action": {
    "default_title": "Open Negotiating Agent"
  }

  ,
  "content_scripts": [
    {
      "matches": [
        "https://www.facebook.com/marketplace/*",
        "https://www.facebook.com/buy/*",
        "https://www.messenger.com/*"
      ],
      "js": ["src/content/content.js"],
      "run_at": "document_idle"
    }
  ]
  ,
  "options_page": "src/options/options.html"
}
